%a.flex.flex-col.items-center.bg-white.border.border-gray-200.rounded-lg.shadow.md:flex-row.md:max-w-xl.hover:bg-gray-100.dark:border-gray-700.dark:bg-gray-800.dark:hover:bg-gray-700{href: "#"}
  - if cat&.photos&.any?
    %img.object-cover.w-full.rounded-t-lg.h-96.md:h-auto.md:w-48.md:rounded-none.md:rounded-l-lg{alt: "cat_image", src: cat&.photos&.first&.image_url}  
  %h5.mb-2.text-2xl.font-bold.tracking-tight.text-gray-900.dark:text-white=cat.name
  %p.row_style=cat.description
  %p.row_style=cat.gender
  %p.row_style=cat.date_of_birth
  %p.row_style=cat.notes
  %p.row_style=cat.vaccination_information
  - if cat.available?
    = link_to t('views.kittens.kitten_details.reservation'), new_reservation_path(cat_id: cat.id)

