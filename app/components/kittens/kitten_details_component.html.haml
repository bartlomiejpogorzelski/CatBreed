%a.flex.flex-col.items-center.bg-white.border.border-gray-200.rounded-lg.shadow.md:flex-row.md:max-w-xl.hover:bg-gray-100.dark:border-gray-700.dark:bg-gray-800.dark:hover:bg-gray-700{href: "#"}
  - if cat&.photos&.any?
    %img.object-cover.w-full.rounded-t-lg.h-96.md:h-auto.md:w-48.md:rounded-none.md:rounded-l-lg{alt: "cat_image", src: cat&.photos&.first&.image_url}  
  %flex-row.pl-4
    %h5.mb-2.text-1xl.font-bold.tracking-tight.text-gray-900.dark:text-white= cat.name
    %p.row_style
      %strong Description: 
      = cat.description
    %p.row_style
      %strong Gender: 
      = cat.gender
    %p.row_style
      %strong Date of Birth: 
      = cat.date_of_birth
    %p.row_style
      %strong Notes: 
      = cat.notes
    %p.row_style
      %strong Vaccination Information: 
      = cat.vaccination_information
    - if cat.available?
      %p.row_style.text-white-500
        = link_to t('views.kittens.kitten_details.reservation'), new_reservation_path(cat_id: cat.id), class: "hover:bg-gray-700 font-bold py-2 px-4 rounded"
